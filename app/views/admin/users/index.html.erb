
<h1>Listing Users</h1>

<%= will_paginate @users %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>username</th>
      <th>email</th>
      <th>public?</th>
      <th>joined at</th>
      <th colspan="4">actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.public? %></td>
        <td><%=l user.created_at, format: :short %></td>
        <td><%= link_to 'Profile', user_path(user) if user.public? %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users %>

<br>

<%= link_to 'New User', new_admin_user_path, class: 'btn btn-primary' %>
